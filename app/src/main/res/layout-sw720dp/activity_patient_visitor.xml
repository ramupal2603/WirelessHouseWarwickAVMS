<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image_inner"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <include layout="@layout/layout_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/largeMargin"
        android:layout_marginRight="@dimen/largeMargin"
        android:layout_weight="0.70"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtFirstName"
                android:layout_width="0dp"
                android:layout_height="@dimen/edtTextHeight"
                android:layout_weight="0.50"
                android:background="@drawable/edt_background"
                android:hint="Firstname"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:padding="@dimen/largeMargin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smallTextSize" />

            <EditText
                android:id="@+id/edtSurName"
                android:layout_width="0dp"
                android:layout_height="@dimen/edtTextHeight"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_weight="0.50"
                android:background="@drawable/edt_background"
                android:hint="Surname"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:padding="@dimen/largeMargin"
                android:textSize="@dimen/smallTextSize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin">


            <EditText
                android:id="@+id/edtHereToVisit"
                android:layout_width="0dp"
                android:layout_height="@dimen/edtTextHeight"
                android:layout_weight="0.50"
                android:background="@drawable/edt_background"
                android:hint="Here to visit"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingLeft="@dimen/largeMargin"
                android:textSize="@dimen/smallTextSize" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/edtTextHeight"
                android:visibility="invisible"
                android:layout_weight="0.50">

                <EditText
                    android:id="@+id/edtCarRegistration"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_weight="0.70"
                    android:background="@drawable/edt_background"
                    android:hint="Car Registration"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/largeMargin"
                    android:textSize="@dimen/smallTextSize" />

                <com.adverticoLTD.avms.customClasses.FontTextViewBold
                    android:id="@+id/next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_weight="0.30"
                    android:background="@drawable/bg_grey_round_corner"
                    android:gravity="center"
                    android:text="@string/next"
                    android:visibility="gone"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/regularTextSize" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/common_margin">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_btn" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_small_sign_in" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/layout_common_footer" />

</LinearLayout>