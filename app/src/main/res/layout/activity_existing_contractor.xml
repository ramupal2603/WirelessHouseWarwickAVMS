<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image_inner"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <include layout="@layout/layout_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/largeMargin"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_marginRight="@dimen/largeMargin"
        android:layout_weight="0.70"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/largeMargin"
            android:text="Please enter your ID"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/regularTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/largeMargin"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtContractorId"
                android:layout_width="0dp"
                android:layout_height="@dimen/edtTextHeight"
                android:layout_weight="1"
                android:background="@drawable/edt_background"
                android:hint="Enter your Contractor ID here"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:paddingLeft="@dimen/largeMargin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/regularTextSize">

            </EditText>

            <ImageView
                android:id="@+id/imgSignIn"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_margin"
                android:src="@drawable/ic_signin_large" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/common_margin">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/colorTheme"
                    android:src="@drawable/ic_back_btn" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/layout_common_footer" />

</LinearLayout>