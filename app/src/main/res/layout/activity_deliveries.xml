<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image_inner"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <include layout="@layout/layout_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/largeMargin"
        android:layout_marginRight="@dimen/largeMargin"
        android:layout_weight="0.70"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.adverticoLTD.avms.customClasses.FontTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery for"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/largeTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/edtTextHeight"
                android:layout_weight="0.50"
                android:background="@drawable/edt_background">

                <EditText
                    android:id="@+id/edtCourierName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edtTextHeight"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Courier Name"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/largeMargin"
                    android:textSize="@dimen/smallTextSize" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/loutCompanyView"
                android:layout_width="0dp"
                android:layout_height="@dimen/edtTextHeight"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_weight="0.50"
                android:background="@drawable/edt_background">

                <EditText
                    android:id="@+id/edtCompany"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edtTextHeight"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:hint="Company/Dept Visiting"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/largeMargin"
                    android:textSize="@dimen/smallTextSize" />


                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_drop_down">

                </ImageView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">


            <LinearLayout
                android:id="@+id/loutStaffView"
                android:layout_width="0dp"
                android:layout_height="@dimen/edtTextHeight"
                android:layout_weight="0.50"
                android:background="@drawable/edt_background">

                <EditText
                    android:id="@+id/edtStaff"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edtTextHeight"
                    android:layout_weight="1"
                    android:background="@null"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:hint="Staff Visiting"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/largeMargin"
                    android:textSize="@dimen/smallTextSize" />


                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_drop_down">

                </ImageView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/loutSendDeliveryEmail"
                android:layout_width="0dp"
                android:layout_height="@dimen/edtTextHeight"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_weight="0.50"
                android:background="@drawable/btn_sign_out_border_color">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edtTextHeight"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/largeMargin"
                    android:text="Send Notification"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/mediumTextSize" />


                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="match_parent"
                    android:rotation="270"
                    android:tint="@color/whiteColor"
                    android:src="@drawable/ic_arrow_drop_down" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/common_margin">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_btn"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/imgSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_small_sign_in" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/layout_common_footer" />

</LinearLayout>